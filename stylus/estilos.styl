@import "normalize.css"

azul = rgb(45,140,160)
blanco = rgb(255,255,255)
color_logo = rgb(239,240,246)
gris = rgb(120,125,130)
gris_claro = rgb(190,190,220)
negro = rgb(0,0,0)

*
	font-family helvetica

h1
h2
figure
p
ul
	margin 0

body
	font-size 16px

footer
	border-top 2px solid gris
	clear both
	padding .5em 1em .5em 0
	p
		color gris
		font-size .8em
		font-style italic
		margin 0
		text-align right

form
	text-align center
	input
	select
	textarea
		display block
		font-size .9em
		margin 0 auto 1em auto
		padding 3px 5px
		&.corto
			width 140px
		&.largo
			width 350px
	label
		display block
		font-size .9em
	input
		&[type="button"]
		&[type="reset"]
			background gris_claro
			border none
			display inline-block
			margin 2em 1em
			padding 10px
			width 200px

header
	background gris
	border-bottom 2px solid gris
	overflow hidden
	padding .5em 1em .5em 0
	h1
	p.slogan
		color color_logo
		text-align right
	figure
		border-right 2px solid color_logo
		float left
		margin 0 0 0 2em
		padding 0 1em 0 0
		a
			img
				width 90px
	p.slogan
		font-size 1.4em
		float right

nav
	float left
	width 20%
	ul
		border-right 2px solid gris
		border-bottom 2px solid gris
		list-style none
		padding 0
		li
			text-align center
			a
				color gris
				display block
				padding 10px 0
				text-decoration none
				&:hover
					background gris
					color blanco

#atregistradas
	table
		td
			&.id
				width 4%
			&.actividad
				text-align justify
				width 39%
			&.ente
				width 20%
			&.supervisor
				width 12%
			&.fecini
				width 12%
			&.fecfin
				width 12%

#camposdetextoenproc
	display none

#cboobjetivos
	margin 0 auto

#contenidoobjetivo
	border 1px solid gris
	display none
	margin 0 auto 2em auto
	padding 5px 10px
	width 70%
	h4
		margin 0

#objregistrados
	display none
	table
		td
			&.id
				width 4%
			&.actividad
				text-align justify
				width 35%
			&.ente
				width 26%
			&.objetivo
				text-align justify
				width 35%

#procregistrados
	display none
	table
		td
			&.id
				width 16%
			&.procedimiento
				text-align justify
				width 42%
			&.objetivo
				text-align justify
				width 42%				

#controlesenobjetivos
	display none

.contenedor
	float right
	padding 1em 0 2em 0
	text-align center
	width 79%
	h2
		font-size 1.3em
		margin 1em 0
		text-decoration underline		

.inicio
	float right
	text-align center
	width 79%
	article
		padding 1em 0
		h2
			font-size 1.5em
			margin 1em 0
		p
			font-size 1.2em
			margin 1em auto
			text-align justify
			width 50%

.linkborraro
.linkborrara
.linkborrarp
	color rgb(0,0,250)
	text-decoration underline
	&:hover
		cursor pointer

.tablaresumen
	table
		display block
		margin 4em auto 0 auto
		width 85%
		td
		th
			border 1px solid gris
			padding 6px 10px